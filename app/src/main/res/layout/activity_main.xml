<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sahil.cloudadic.MainActivity">
    <ImageView
        android:id="@+id/imageview"
        android:layout_weight="9"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:id="@+id/leneartitle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_width="390dp"
            android:layout_height="45dp"
            android:text="CLOUDADIC MULTI-UTILITY"/>
        </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/leneartitle"
        android:id="@+id/lenear1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_camera"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="80dp"
            android:layout_height="128dp"
            android:layout_width="128dp"
            app:cb_pressedRingWidth="16dp"
            app:cb_color="#2196F3"
            android:src="@drawable/ic_camera_alt_black_24dp"
            />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_location"
            android:layout_height="128dp"
            android:layout_width="128dp"
            app:cb_pressedRingWidth="16dp"
            app:cb_color="#2196F3"
            android:src="@drawable/ic_place_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/lenear1"
        android:id="@+id/lenear2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_notifaction"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="80dp"
            android:layout_height="128dp"
            android:layout_width="128dp"
            app:cb_pressedRingWidth="16dp"
            app:cb_color="#FFD54F"
            android:src="@drawable/ic_notifications_active_black_24dp"
            />
        <at.markushi.ui.CircleButton
            android:id="@+id/btn_weather"
            android:layout_height="128dp"
            android:layout_width="128dp"
            app:cb_pressedRingWidth="16dp"
            app:cb_color="#FFD54F"
            android:src="@drawable/ic_filter_drama_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/lenear2"
        android:id="@+id/lenear3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_device"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="80dp"
            android:layout_height="128dp"
            android:layout_width="128dp"
            app:cb_pressedRingWidth="16dp"
            app:cb_color="#F06292"
            android:src="@drawable/ic_phone_iphone_black_24dp"
            />
        <at.markushi.ui.CircleButton
            android:id="@+id/btn_internet"
            android:layout_height="128dp"
            android:layout_width="128dp"
            app:cb_pressedRingWidth="16dp"
            app:cb_color="#F06292"
            android:src="@drawable/ic_loop_black_24dp"
            />

    </LinearLayout>
</RelativeLayout>
