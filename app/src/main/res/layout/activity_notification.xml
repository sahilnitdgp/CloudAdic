<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sahil.cloudadic.Notification">


    <TextView
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Enter The Text for Notification"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:id="@+id/textView"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="171dp"
        android:id="@+id/edtuserinput"
        android:layout_alignParentEnd="true" />

    <Button
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        android:text="Notify Me"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/edtuserinput"
        android:layout_marginTop="48dp"
        android:id="@+id/notifiyme" />


</RelativeLayout>
